include ../mixins
doctype html
html(lang="ru")
	head
		meta(charset="utf-8")
		meta(content="" name="author")
		meta(content="" name="description")
		meta(content="" name="keywords")
		meta(content="width=device-width, initial-scale=1" name="viewport")
		meta(content="ie=edge" http-equiv="x-ua-compatible")
		link(rel='stylesheet' href="static/css/main.css")

		block title
			title Страница авторизации

	body
		.wrapper
			section.section.login
				.login__bg
					img(src="static/img/general/login-bg.jpg")
				button.button.login__button Авторизоваься
				.login__user-block
					.user-login
						.user-login__img
							img(src="static/img/content/user.jpg")
						.user-login__name
							| Static Pro
						.user-login__desc
							| My own site
						.user-login__socials
							ul.community
								each item in ['vk', 'github', 'in']
									li.community__item
										a(href="#").community__link
											svg(class="community__icon community__icon-" + item)
												use(xlink:href="static/img/svg/symbol/sprite.svg#" + item)
						.user-login__menu
							.login-menu
								ul.login-menu__list
									each loginItem in ['Мои работы', 'Обо мне', 'Блог']
										li.login-menu__item
											a(href="" class="login-menu__link") #{loginItem}
				.login__copyright
					p Static Pro site. All rights received
	scripts(src="static/js/libs.min.js")
	scripts(src="static/js/main.js")