include mixins
doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(content="" name="author")
    meta(content="" name="description")
    meta(content="" name="keywords")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(content="ie=edge" http-equiv="x-ua-compatible")
    link(rel='stylesheet' href="static/css/main.css")

    block title

  body

    .wrapper
      section.section.hero
        ul.socials__list
          each item in ['vk', 'github', 'in']
            li.socials__item
              a(href="#").socials__link
                svg(class="socials__icon-" + item)
                  use(xlink:href="static/img/svg/symbol/sprite.svg#" + item)
        a(href="").hamburger
        a(href="").down-arrow
      section.section
      section.section

    block content



    scripts(src="static/js/libs.min.js")
    scripts(src="static/js/main.js")